@require '../../../variables.styles.styl'

.devices {
	.list {
		margin: 0;
		padding: 0;
		width: 100%;
		border-spacing: 0;

		.actions {
			width: 150px;
			text-align: right;
		}

		.device {
			background: #eee;
			cursor: pointer;
			position: relative;

			&:nth-of-type(2n) {
				background: #f5f5f5;
			}

			&.selected {
				background: $green;
			}

			&:hover {
				background: $yellow;
			}

			.connection {
				text-align: center;

				.status {
					width: 8px;
					height: 8px;
					display: inline-block;

					&--true {
						background: $green;
					}
					&--false {
						background: $red;
					}
				}
			}

			.actions {
				width: 150px;
				text-align: right;

				.connect,
				.disconnect {
					display: inline-block;
					width: 80px;
					text-align: right;
				}

				.console {
					display: inline-block;
					width: 60px;
				}

				> *:hover {
					color: $blue;
				}
			}
		}
	}
}

.edit-form {
	.field-label {
		display: block;

		.label-text {
			display: inline-block;
			width: 40px;
		}

		.field {
			border: none;
			display: inline-block;
			margin: 0;
			outline: none;
			padding: 0;
			width: calc(100% - 48px);
			line-height: 15px;
			font-family: monospace;
			font-size: 12px;

			&:focus {
				background: #eee;
			}
		}
	}
}
